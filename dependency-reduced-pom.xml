<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.phoenix</groupId>
  <artifactId>ConsoleClient</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>de.phoenix.consoleclient.core.Core</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <includes>
              <include>com.sun.jersey:*</include>
              <include>de.phoenix:*</include>
              <include>com.sun.jersey.contribs:*</include>
              <include>com.sun.ws.rs:*</include>
              <include>org.glassfish.grizzly:*</include>
              <include>asm:*</include>
              <include>commons-codec:*</include>
            </includes>
          </artifactSet>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>phoenixNexus</id>
      <url>http://meldanor.dyndns.org:8081/nexus/content/groups/public/</url>
    </repository>
  </repositories>
  <distributionManagement>
    <repository>
      <id>phoenixNexus</id>
      <name>Internal Releases</name>
      <url>http://meldanor.dyndns.org:8081/nexus/content/repositories/releases</url>
    </repository>
    <snapshotRepository>
      <id>phoenixNexus</id>
      <name>Internal Releases</name>
      <url>http://meldanor.dyndns.org:8081/nexus/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <jersey-version>1.17.1</jersey-version>
  </properties>
</project>

